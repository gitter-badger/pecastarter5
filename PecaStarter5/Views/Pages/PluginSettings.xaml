<UserControl x:Class="Progressive.PecaStarter5.Views.Pages.PluginSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Progressive.Commons.Views.Converters"
    xmlns:ct="clr-namespace:Progressive.Commons.Views.Controls"
    xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
    Height="Auto">
    <UserControl.Resources>
        <ResourceDictionary Source="..\Styles\ResourceDictionary.xaml"/>
    </UserControl.Resources>
    <DockPanel>
        <ListBox HorizontalContentAlignment="Stretch" ItemsSource="{Binding Col}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <StackPanel>
                            <TextBlock Text="おっぱいおっぱい" HorizontalAlignment="Left"/>
                            <StackPanel Margin="3" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button>設定</Button>
                                <Button>無効化</Button>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
