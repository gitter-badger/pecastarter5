<UserControl x:Class="Progressive.PecaStarter5.Views.Pages.PluginColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" Margin="8,0,0,0"  FontWeight="Bold"
                                       Text="{Binding Name}"/>
                <TextBlock HorizontalAlignment="Left" Margin="8,0,0,0" FontWeight="Bold"
                                       Text="{Binding Version}"/>
            </StackPanel>
            <StackPanel Margin="3" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="設定" Command="{Binding Path=SettingsCommand}"/>
                <Button Content="無効化" Command="{Binding DisablingCommand}"
                                        CommandParameter="{Binding}"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
